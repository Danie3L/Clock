{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended","airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["error", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }],
    "no-plusplus": "off",
    "no-param-reassign": 0
  }
}
